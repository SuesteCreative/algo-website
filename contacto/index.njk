{% set pageTitle = "Contacto | Algo Atelier" %}
{% set metaDesc = "Entre em contacto com o Algo Atelier para discutir o seu próximo projeto." %}
{% set canonical = "https://algoatelier.pt/contacto/" %}
{% set activeSection = "contacto" %}
{% set ptUrl = "/contacto/" %}
{% set enUrl = "/en/contact/" %}
<!DOCTYPE html>
<html lang="pt">
<head>{% include "head.njk" %}</head>
<body>
{% include "header-pt.njk" %}
<main>
    <section class="container" style="padding-top: var(--spacing-xl); padding-bottom: var(--spacing-lg);">
        <div class="contact-grid">
            <div class="fade-up active">
                <span class="caps">Contacto</span>
                <h1 class="page-title fade-up active">Vamos conversar sobre a sua obra.</h1>

                <div style="display: grid; grid-template-columns: 1fr; gap: 3rem; margin-top: var(--spacing-lg);">
                    <div>
                        <h3 class="caps" style="font-size: 0.7rem; margin-bottom: 0.5rem; opacity: 0.5;">Email</h3>
                        <p style="font-size: 1.2rem;"><a href="mailto:{{ site.contacts.contact_email }}" style="text-decoration:none;color:inherit;">{{ site.contacts.contact_email }}</a></p>
                    </div>
                    <div>
                        <h3 class="caps" style="font-size: 0.7rem; margin-bottom: 0.5rem; opacity: 0.5;">Telefone</h3>
                        <p style="font-size: 1.2rem;"><a href="tel:{{ site.contacts.phone | replace(' ', '') }}" style="text-decoration:none;color:inherit;">{{ site.contacts.phone }}</a></p>
                    </div>
                    <div>
                        <h3 class="caps" style="font-size: 0.7rem; margin-bottom: 0.5rem; opacity: 0.5;">Localização</h3>
                        <p style="font-size: 1.2rem;">{{ site.contacts.address | nl2br | safe }}</p>
                    </div>
                    <div>
                        <h3 class="caps" style="font-size: 0.7rem; margin-bottom: 1rem; opacity: 0.5;">Redes Sociais</h3>
                        {% import "social-links.njk" as social %}
                        {{ social.links(site) }}
                    </div>
                </div>
            </div>

            <div class="fade-up active">
                <form action="#" class="contact-form">
                    <div class="form-group">
                        <label for="name">Nome Completo</label>
                        <input type="text" id="name" name="name" required placeholder="Como se chama?">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required placeholder="exemplo@email.com">
                    </div>
                    <div class="form-group">
                        <label for="message">Mensagem</label>
                        <textarea id="message" name="message" rows="5" required placeholder="Fale-nos do seu projeto..."></textarea>
                    </div>
                    <div class="privacy-group">
                        <input type="checkbox" id="privacy" name="privacy" required>
                        <label for="privacy">Li e aceito a <a href="/legal/privacidade/">Política de Privacidade</a> e o tratamento dos meus dados para fins de contacto.</label>
                    </div>
                    <button type="submit" class="btn-budget" style="width: 100%; margin: 0; padding: 1.2rem;">Enviar Mensagem</button>
                </form>
            </div>
        </div>
    </section>
</main>
{% include "footer-pt.njk" %}
<script src="/assets/js/script.js"></script>
</body>
</html>
