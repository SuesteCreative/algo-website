<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script>window.prerenderReady = false;</script>
<meta name="description" content="{{ metaDesc }}">
<title>{{ pageTitle }}</title>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.siteUrl }}{{ page.url }}">
<meta property="og:title" content="{{ pageTitle }}">
<meta property="og:description" content="{{ metaDesc }}">
<meta property="og:image" content="{{ site.siteUrl }}{{ ogImage | default('/assets/img/hero-image-final.webp') }}">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ site.siteUrl }}{{ page.url }}">
<meta property="twitter:title" content="{{ pageTitle }}">
<meta property="twitter:description" content="{{ metaDesc }}">
<meta property="twitter:image" content="{{ site.siteUrl }}{{ ogImage | default('/assets/img/hero-image-final.webp') }}">

{% if canonical %}<link rel="canonical" href="{{ canonical }}">{% endif %}
{% if hreflangPt %}<link rel="alternate" hreflang="pt" href="{{ hreflangPt }}">{% endif %}
{% if hreflangEn %}<link rel="alternate" hreflang="en" href="{{ hreflangEn }}">{% endif %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;1,400&family=Space+Mono:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

<!-- Favicons -->
<link rel="icon" href="/favicon.ico?v=3" sizes="any">
<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=3">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=3">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=3">
<link rel="apple-touch-icon" href="/apple-touch-icon.png?v=3">

<link rel="stylesheet" href="/assets/css/styles.css">
<script>window.prerenderReady = true;</script>
