<section class="contact-cta-section snap-section" id="conversar">
    <div class="container">
        <div class="contact-cta-grid">
            <div class="contact-cta-content fade-up">
                {% if lang == 'pt' %}
                <h2 class="section-headline">Vamos Conversar</h2>
                <p class="scroller-subheading">Tem um projeto em mente ou gostaria de saber mais sobre o nosso método de trabalho? Entre em contacto connosco.</p>
                {% else %}
                <h2 class="section-headline">Let's Talk</h2>
                <p class="scroller-subheading">Have a project in mind or would like to know more about our working method? Get in touch with us.</p>
                {% endif %}
                
                <div class="contact-methods">
                    <div class="method-item">
                        <span class="caps-mini">Email</span>
                        <a href="mailto:{{ site.contacts.contact_email }}">{{ site.contacts.contact_email }}</a>
                    </div>
                    <div class="method-item">
                        <span class="caps-mini">{% if lang == 'pt' %}Telefone{% else %}Phone{% endif %}</span>
                        <a href="tel:{{ site.contacts.phone | replace(' ', '') }}">{{ site.contacts.phone }}</a>
                    </div>
                </div>
            </div>
            
            <div class="contact-cta-form fade-up">
                <form name="contacto-landing" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="contact-form">
                    <input type="hidden" name="form-name" value="contacto-landing">
                    <p style="display:none;"><label>Don't fill this: <input name="bot-field"></label></p>
                    
                    {% if lang == 'pt' %}
                    <div class="form-group">
                        <label for="cta-name">Nome Completo</label>
                        <input type="text" id="cta-name" name="name" required placeholder="Como se chama?">
                    </div>
                    <div class="form-group">
                        <label for="cta-email">Email</label>
                        <input type="email" id="cta-email" name="email" required placeholder="exemplo@email.com">
                    </div>
                    <div class="form-group">
                        <label for="cta-message">Mensagem</label>
                        <textarea id="cta-message" name="message" rows="4" required placeholder="Fale-nos do seu projeto..."></textarea>
                    </div>

                    <div class="privacy-group" style="margin-top: 1rem; display: flex; gap: 0.8rem; align-items: flex-start; font-size: 0.75rem; opacity: 0.7;">
                        <input type="checkbox" id="privacy-cta" name="privacy" required>
                        <label for="privacy-cta">Aceito a <a href="/legal/privacidade/" target="_blank" style="color: inherit; text-decoration: underline;">política de privacidade</a> e autorizo o contacto.</label>
                    </div>

                    <button type="submit" class="btn-budget" style="width: 100%; margin: 2rem 0 0;">Enviar Mensagem</button>
                    {% else %}
                    <div class="form-group">
                        <label for="cta-name">Full Name</label>
                        <input type="text" id="cta-name" name="name" required placeholder="What is your name?">
                    </div>
                    <div class="form-group">
                        <label for="cta-email">Email</label>
                        <input type="email" id="cta-email" name="email" required placeholder="example@email.com">
                    </div>
                    <div class="form-group">
                        <label for="cta-message">Message</label>
                        <textarea id="cta-message" name="message" rows="4" required placeholder="Tell us about your project..."></textarea>
                    </div>

                    <div class="privacy-group" style="margin-top: 1rem; display: flex; gap: 0.8rem; align-items: flex-start; font-size: 0.75rem; opacity: 0.7;">
                        <input type="checkbox" id="privacy-cta-en" name="privacy" required>
                        <label for="privacy-cta-en">I accept the <a href="/en/legal/privacy/" target="_blank" style="color: inherit; text-decoration: underline;">privacy policy</a> and authorize contact.</label>
                    </div>

                    <button type="submit" class="btn-budget" style="width: 100%; margin: 2rem 0 0;">Send Message</button>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</section>

<style>
.contact-cta-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--bg-color);
    background-image: var(--dot-bg);
    background-size: var(--dot-size);
    border-top: 1px solid var(--border-color);
}

.contact-cta-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    align-items: flex-start;
}

.contact-methods {
    margin-top: 3rem;
    display: grid;
    gap: 2rem;
}

.caps-mini {
    display: block;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.5;
    margin-bottom: 0.5rem;
}

.method-item a {
    font-size: 1.2rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: var(--transition-fast);
}

.method-item a:hover {
    color: var(--accent-color);
}

.contact-form .btn-budget:hover {
    background: var(--accent-color) !important;
    border-color: var(--accent-color) !important;
    color: #fff !important;
}

@media (max-width: 991px) {
    .contact-cta-grid {
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
    }
    .contact-cta-content {
        text-align: center;
    }
    .contact-methods {
        justify-content: center;
        text-align: center;
    }
}
</style>
