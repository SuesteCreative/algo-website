{#
  cta-section.njk
  ────────────────────────────────────────────────────────────────
  Bilingual CTA for Services and Projects.
  ────────────────────────────────────────────────────────────────
#}
{% if activeSection == 'projetos' or activeSection == 'projects' %}
<section class="container cta-architectural-quote" style="padding: var(--spacing-xl) 0; border-top: 1px solid var(--border-color); margin-top: var(--spacing-lg);">
    <div style="display: grid; grid-template-columns: 1fr; gap: 4rem; align-items: center;" class="fade-up active">
        <div style="max-width: 600px;">
            <span class="caps" style="opacity: 0.5; display: block; margin-bottom: 2rem;">Manifesto</span>
            <blockquote style="margin: 0;">
                <p style="font-family: var(--font-serif); font-size: clamp(1.8rem, 4vw, 2.8rem); line-height: 1.3; margin-bottom: 2rem; color: var(--text-primary);">
                    {% if lang == 'en' %}
                        "Architecture is the learned game, correct and magnificent, of forms assembled in the light."
                    {% else %}
                        "A arquitetura é o jogo sábio, correto e magnífico dos volumes sob a luz."
                    {% endif %}
                </p>
                <cite style="font-style: normal; font-size: 0.8rem; letter-spacing: 0.15em; text-transform: uppercase; opacity: 0.6;">— Le Corbusier</cite>
            </blockquote>
        </div>
        <div class="blueprint-reveal" style="width: 100%; height: 400px; overflow: hidden; border: 1px solid rgba(0,0,0,0.08);">
            <img src="https://images.unsplash.com/photo-1503387762-592dea58ef23?q=80&w=2000&auto=format&fit=crop" alt="Architectural Blueprint" style="width: 100%; height: 100%; object-fit: cover; opacity: 0.8; filter: grayscale(1) contrast(1.1);">
        </div>
    </div>
</section>
{% else %}
<section class="container cta-next-steps" style="padding: var(--spacing-xl) 0; border-top: 1px solid var(--border-color); margin-top: var(--spacing-lg);">
    <div style="text-align: center; max-width: 700px; margin: 0 auto;" class="fade-up active">
        <span class="caps" style="opacity: 0.5; display: block; margin-bottom: 2rem;">
            {% if lang == 'en' %}Next Steps{% else %}Próximos Passos{% endif %}
        </span>
        <h2 class="section-headline" style="font-family: var(--font-serif); font-weight: 400; font-size: clamp(2rem, 5vw, 3.5rem); margin-bottom: 2.5rem;">
            {% if lang == 'en' %}
                Ready to transform your vision into a landmark?
            {% else %}
                Pronto para transformar a sua visão num marco arquitetónico?
            {% endif %}
        </h2>
        <a href="{% if lang == 'en' %}/en/budget/{% else %}/orcamento/{% endif %}" class="btn-budget" style="display: inline-block; padding: 1.2rem 3rem;">
            {% if lang == 'en' %}Request a Quote{% else %}Pedir Orçamento{% endif %}
        </a>
    </div>
</section>
{% endif %}

<style>
.cta-next-steps .btn-budget {
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}
.cta-next-steps .btn-budget:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}
@media (min-width: 992px) {
    .cta-architectural-quote .fade-up.active {
        grid-template-columns: 1.2fr 1fr;
    }
}
</style>
