---
permalink: /projetos/
eleventyExcludeFromCollections: true
---
{% set pageTitle = "Projetos | Algo Atelier" %}
{% set metaDesc = "Portfólio de projetos de arquitetura do Algo Atelier — habitação, equipamentos públicos e espaços experimentais." %}
{% set canonical = "https://algoatelier.netlify.app/projetos/" %}
{% set hreflangPt = "https://algoatelier.netlify.app/projetos/" %}
{% set hreflangEn = "https://algoatelier.netlify.app/en/projects/" %}
{% set activeSection = "projetos" %}
{% set ptUrl = "/projetos/" %}
{% set enUrl = "/en/projects/" %}
<!DOCTYPE html>
<html lang="pt">
<head>{% include "head.njk" %}</head>
<body>
{% include "header-pt.njk" %}
<main>
    <section class="container snap-section" style="padding: 185px var(--spacing-md) var(--spacing-lg);">
        <div style="max-width: 700px; margin-bottom: var(--spacing-md);">
            <span class="caps fade-up active" style="display: block; margin-bottom: 1rem; opacity: 0.6;">Portfólio</span>
            <h1 class="page-title fade-up active">Projetos Selecionados</h1>
        </div>

        <div class="projects-grid">
            {% for projeto in collections.projetos %}
            <a href="/projetos/{{ projeto.data.slug }}/" class="project-card fade-up">
                <div class="img-wrapper">
                    <img src="{{ projeto.data.cover_image }}" alt="{{ projeto.data.cover_image_alt or projeto.data.title }}" class="reveal-image" loading="lazy">
                </div>
                <p class="location">{{ projeto.data.location }}</p>
                <h3>{{ projeto.data.title }}</h3>
                <p class="description">{{ projeto.data.typology | typologyLabel("pt") }} · {{ projeto.data.year }}</p>
            </a>
            {% endfor %}
        </div>
    </section>
</main>
{% include "footer-pt.njk" %}
<script src="/assets/js/script.js"></script>
    {% include "tracking-init.njk" %}
</body>
</html>
