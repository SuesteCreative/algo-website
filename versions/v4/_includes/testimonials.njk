<section class="testimonials snap-section" id="testimonials">
    <div class="container">
        {% if lang == 'pt' %}
        <h2 class="section-headline fade-up">O que dizem os nossos clientes</h2>
        {% else %}
        <h2 class="section-headline fade-up">What our clients say</h2>
        {% endif %}
        
        <div class="testimonials-carousel-wrapper">
            <div class="testimonials-track">
                {% for item in site.testimonials.items %}
                <div class="testimonial-card">
                    <div class="testimonial-rating">
                        {% for i in range(0, 5) %}
                            {% if i < item.rating %}
                                <span class="star">★</span>
                            {% else %}
                                <span class="star empty">★</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <p class="testimonial-text">"{{ item.text }}"</p>
                    <p class="testimonial-author">{{ item.name }}</p>
                </div>
                {% endfor %}
                {# Duplicating for infinite effect logic if needed by JS, or just using CSS scroll-snap #}
                {% for item in site.testimonials.items %}
                <div class="testimonial-card hide-mobile">
                    <div class="testimonial-rating">
                        {% for i in range(0, 5) %}
                            {% if i < item.rating %}
                                <span class="star">★</span>
                            {% else %}
                                <span class="star empty">★</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <p class="testimonial-text">"{{ item.text }}"</p>
                    <p class="testimonial-author">{{ item.name }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
.testimonials {
    padding: var(--spacing-lg) 0; /* Reduced from XL */
    overflow: hidden;
    background-color: var(--bg-color);
    background-image: var(--dot-bg);
    background-size: var(--dot-size);
}

.testimonials .section-headline {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.testimonials-carousel-wrapper {
    position: relative;
    width: 100%;
    cursor: grab;
}

.testimonials-track {
    display: flex;
    gap: 2.5rem;
    padding: 1rem 0;
    animation: scroll-testimonials 60s linear infinite;
    width: max-content;
}

.testimonials-track:hover {
    animation-play-state: paused;
}

.testimonial-card {
    flex: 0 0 450px;
    background: #fff;
    padding: 3rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 10px 30px rgba(0,0,0,0.02);
}

.testimonial-rating {
    margin-bottom: 1.5rem;
    color: #FFD700;
}

.testimonial-rating .star {
    font-size: 1.2rem;
}

.testimonial-rating .star.empty {
    color: #ddd;
}

.testimonial-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-primary);
    margin-bottom: 2rem;
    font-style: italic;
}

.testimonial-author {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2rem;
    font-weight: 600;
    color: var(--text-secondary);
}

@keyframes scroll-testimonials {
    0% { transform: translateX(0); }
    100% { transform: translateX(calc(-50% - 1.25rem)); }
}

@media (max-width: 768px) {
    .testimonial-card {
        flex: 0 0 300px;
        padding: 2rem;
    }
    .hide-mobile { display: none; }
    .testimonials-track {
        animation: none;
        overflow-x: auto;
        width: auto;
        padding: 0 1rem;
        scroll-snap-type: x mandatory;
    }
    .testimonial-card {
        scroll-snap-align: center;
    }
}
</style>
