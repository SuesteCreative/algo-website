---
permalink: /sobre/
---
{% set pageTitle = "Sobre | Algo Atelier" %}
{% set metaDesc = "Saiba mais sobre o percurso e a visão arquitetónica do Algo Atelier." %}
{% set canonical = site.siteUrl + page.url %}
{% set hreflangPt = site.siteUrl + ptUrl %}
{% set hreflangEn = site.siteUrl + enUrl %}
{% set activeSection = "sobre" %}
{% set ptUrl = "/sobre/" %}
{% set enUrl = "/en/about/" %}
<!DOCTYPE html>
<html lang="pt">
<head>{% include "head.njk" %}</head>
<body class="site-grid">
{% include "header-pt.njk" %}

<main class="container page-padding">
    <!-- 01. INTRODUÇÃO -->
    <article class="about-section grid-section">
        <div class="col-left">
            <span class="caps fade-up active">O Atelier</span>
        </div>
        <div class="col-right">
            <h1 class="page-title fade-up active">{{ site.about.pt.intro.title }}</h1>
            <div class="content-text fade-up active delay-1">
                {{ site.about.pt.intro.text | markdownify | safe }}
            </div>
        </div>
    </article>

    <!-- 02. FILOSOFIA -->
    <article class="about-section grid-section">
        <div class="col-left">
            <span class="caps fade-up active">Filosofia</span>
        </div>
        <div class="col-right">
            <h2 class="section-title fade-up active">{{ site.about.pt.philosophy.title }}</h2>
            <div class="content-text fade-up active delay-1">
                {{ site.about.pt.philosophy.text | markdownify | safe }}
            </div>
        </div>
    </article>

    <!-- IMAGEM 1 -->
    {% if site.about.images.image_1 %}
    <figure class="about-image full-width reveal active">
        <img src="{{ site.about.images.image_1 }}" alt="{{ site.about.images.image_1_alt }}" loading="lazy">
    </figure>
    {% endif %}

    <!-- 03. PERCURSO -->
    <article class="about-section grid-section">
        <div class="col-left">
            <span class="caps fade-up active">Percurso</span>
        </div>
        <div class="col-right">
            <h2 class="section-title fade-up active">{{ site.about.pt.foundation.title }}</h2>
            <div class="content-text fade-up active delay-1">
                {{ site.about.pt.foundation.text | markdownify | safe }}
            </div>
        </div>
    </article>

    <!-- 04. EQUIPA -->
    {% if site.about.pt.team.text %}
    <article class="about-section grid-section">
        <div class="col-left">
            <span class="caps fade-up active">{{ site.about.pt.team.title }}</span>
        </div>
        <div class="col-right">
            <div class="content-text fade-up active">
                {{ site.about.pt.team.text | markdownify | safe }}
            </div>
        </div>
    </article>
    {% endif %}

    <!-- IMAGEM 2 -->
    {% if site.about.images.image_2 %}
    <figure class="about-image full-width reveal active">
        <img src="{{ site.about.images.image_2 }}" alt="{{ site.about.images.image_2_alt }}" loading="lazy">
    </figure>
    {% endif %}
</main>

<style>
    .page-padding {
        padding-top: var(--spacing-xl);
    }

    .about-section {
        margin-bottom: var(--spacing-xl);
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 992px) {
        .about-section {
            grid-template-columns: 1fr 2fr;
            gap: var(--spacing-lg);
        }
    }

    .col-left .caps {
        font-size: 0.75rem;
        letter-spacing: 0.25em;
        opacity: 0.5;
        position: sticky;
        top: 140px; /* Aligned with desktop menu line */
        display: inline-block;
        transition: opacity 0.8s ease;
    }

    /* Override fade-up transform which breaks position:sticky */
    .col-left .caps.fade-up.active {
        transform: none !important;
        opacity: 0.6;
    }

    .page-title,
    .section-title {
        font-family: var(--font-sans);
        font-weight: 400;
        line-height: 1.2;
        color: var(--text-primary);
    }

    .page-title {
        font-size: clamp(2rem, 6vw, 3.2rem);
        margin-bottom: var(--spacing-lg);
    }

    .section-title {
        font-size: clamp(1.6rem, 4vw, 2.2rem);
        margin-bottom: var(--spacing-md);
        opacity: 0.9;
    }

    .content-text {
        font-size: 1.15rem;
        line-height: 1.8;
        color: var(--text-secondary);
        max-width: 720px;
    }

    .content-text p {
        margin-bottom: 2rem;
    }

    .about-image {
        margin: var(--spacing-xl) 0;
        width: 100%;
        height: 75vh;
        overflow: hidden;
    }

    .about-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .site-grid {
        background-color: var(--bg-color);
    }
</style>

{% include "footer-pt.njk" %}
<script src="/assets/js/script.js"></script>
    {% include "tracking-init.njk" %}
</body>
</html>
