{% set pageTitle = "About | Algo Atelier" %}
{% set metaDesc = "Learn more about the journey and architectural vision of Algo Atelier." %}
{% set canonical = "https://algoatelier.pt/en/about/" %}
{% set activeSection = "about" %}
{% set ptUrl = "/sobre/" %}
{% set enUrl = "/en/about/" %}
<!DOCTYPE html>
<html lang="en">
<head>{% include "head.njk" %}</head>
<body>
{% include "header-en.njk" %}
<main>
    <section class="container" style="padding-top: var(--spacing-xl);">
        <div style="max-width: 800px;">
            <span class="caps fade-up active">The Studio</span>
            <h1 class="page-title fade-up active">Architecture is the balance between light and shadow.</h1>
            <div class="fade-up active" style="margin-top: var(--spacing-lg); line-height: 1.8; color: #444;">
                {{ site.about.en.main_text | markdownify | safe }}
            </div>
        </div>

        {% if site.about.images.image_1 %}
        <div class="img-reveal active" style="margin-top: var(--spacing-lg); height: 60vh;">
            <img src="{{ site.about.images.image_1 }}" alt="Algo Atelier Studio" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        {% endif %}

        {% if site.about.images.image_2 %}
        <div class="img-reveal active" style="margin-top: var(--spacing-lg); height: 60vh;">
            <img src="{{ site.about.images.image_2 }}" alt="Algo Atelier Details" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        {% endif %}
    </section>
</main>
{% include "footer-en.njk" %}
<script src="/assets/js/script.js"></script>
</body>
</html>
