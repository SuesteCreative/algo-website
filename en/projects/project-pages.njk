---
pagination:
  data: collections.projetos
  size: 1
  alias: projeto
eleventyExcludeFromCollections: true
permalink: "/en/projects/{{ projeto.data.slug_en }}/"
---
{% set p = projeto.data %}
{% set pageTitle = p.title_en + " | Algo Atelier" %}
{% set metaDesc = p.meta_description_en or (p.title_en + " — Architecture project by Algo Atelier.") %}
{% set canonical = "https://algoatelier.netlify.app/en/projects/" + p.slug_en + "/" %}
{% set hreflangPt = "https://algoatelier.netlify.app/projetos/" + p.slug + "/" %}
{% set hreflangEn = "https://algoatelier.netlify.app/en/projects/" + p.slug_en + "/" %}
{% set activeSection = "projects" %}
{% set ptUrl = "/projetos/" + p.slug + "/" %}
{% set enUrl = "/en/projects/" + p.slug_en + "/" %}
{% set nextItem = collections.projetos | nextProjectEn(p.slug_en) %}
<!DOCTYPE html>
<html lang="en">
<head>{% include "head.njk" %}</head>
<body>
{% include "header-en.njk" %}
<main>
    <section class="container project-detail-hero" style="padding-top: var(--spacing-xl);">
        <div style="max-width: 800px;">
            <span class="caps fade-up active">{{ p.typology | typologyLabel("en") }}</span>
            <h1 class="page-title fade-up active" style="margin-top: 0.5rem;">{{ p.title_en }}</h1>
        </div>

        <div class="img-reveal active" style="margin-top: var(--spacing-lg); height: 80vh;">
            <img src="{{ p.cover_image }}" alt="{{ p.cover_image_alt or p.title_en }}" style="width:100%;height:100%;object-fit:cover;" loading="eager">
        </div>

        <div class="project-specs stagger-1" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(150px,1fr));gap:2rem;margin-top:var(--spacing-lg);padding:var(--spacing-md) 0;border-top:1px solid #eee;border-bottom:1px solid #eee;">
            <div class="spec-item fade-up active">
                <span style="display:block;font-size:0.7rem;letter-spacing:0.15em;text-transform:uppercase;opacity:0.5;margin-bottom:0.3rem;">Location</span>
                <span style="font-size:1rem;">{{ p.location }}</span>
            </div>
            <div class="spec-item fade-up active">
                <span style="display:block;font-size:0.7rem;letter-spacing:0.15em;text-transform:uppercase;opacity:0.5;margin-bottom:0.3rem;">Area</span>
                <span style="font-size:1rem;">{{ p.area_m2 }} m²</span>
            </div>
            <div class="spec-item fade-up active">
                <span style="display:block;font-size:0.7rem;letter-spacing:0.15em;text-transform:uppercase;opacity:0.5;margin-bottom:0.3rem;">Year</span>
                <span style="font-size:1rem;">{{ p.year }}</span>
            </div>
            <div class="spec-item fade-up active">
                <span style="display:block;font-size:0.7rem;letter-spacing:0.15em;text-transform:uppercase;opacity:0.5;margin-bottom:0.3rem;">Typology</span>
                <span style="font-size:1rem;">{{ p.typology | typologyLabel("en") }}</span>
            </div>
        </div>

        <div class="project-description fade-up active" style="max-width:720px;margin-top:var(--spacing-lg);line-height:1.8;color:#444;">
            {{ p.description_en | markdownify | safe }}
        </div>

        {% if p.gallery_images and p.gallery_images.length > 0 %}
        <div class="project-gallery-grid" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:1rem;margin-top:var(--spacing-lg);">
            {% for item in p.gallery_images %}
            <div class="img-reveal active">
                <img src="{{ item.image }}" alt="{{ p.title_en }} — image {{ loop.index }}" style="width:100%;aspect-ratio:4/3;object-fit:cover;" loading="lazy">
            </div>
            {% endfor %}
        </div>
        {% endif %}

        {% if nextItem %}
        <div class="project-next-nav" style="margin-top:var(--spacing-xl);padding-top:var(--spacing-md);border-top:1px solid #eee;">
            <span class="caps" style="font-size:0.7rem;opacity:0.5;">Next Project</span>
            <a href="/en/projects/{{ nextItem.data.slug_en }}/" style="display:block;margin-top:0.5rem;font-family:'Playfair Display',serif;font-size:clamp(1.5rem,4vw,2.5rem);text-decoration:none;color:inherit;">
                {{ nextItem.data.title_en }} →
            </a>
        </div>
        {% endif %}
    </section>
</main>
{% include "footer-en.njk" %}
<script src="/assets/js/script.js"></script>
    {% include "tracking-init.njk" %}
</body>
</html>
